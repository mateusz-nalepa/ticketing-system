    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <labels>
            org=${orgName}
            application=${appName}
            host=${HOSTNAME}
        </labels>
        <message>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </message>
        <http>
            <url>http://localhost:3100/loki/api/v1/push</url>
        </http>
    </appender>

    <!--    <logger name="org.zalando.logbook.Logbook" level="ALL" additivity="false">-->
    <!--        <appender-ref ref="PAYLOAD_FILE" />-->
    <!--    </logger>-->

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--            <pattern>DUPA - %d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>-->
            <pattern>org=${orgName},application=${appName},host=${HOSTNAME},level=%level XDDDDDDDDDDD - ${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <!--        <appender-ref ref="STDOUT" />-->
        <appender-ref ref="FILE" />
        <!--        <springProfile name="loki">-->
        <appender-ref ref="LOKI" />
        <!--        </springProfile>-->
    </root>
</configuration>
